        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Sviluppatore</th>
                    <th>Specialita</th>
                    <th>Progetti</th>
                    <th>Rating</th>
                    <th>Piano</th>
                </tr>
            </thead>
            <tbody>
                @{ var i = 1; }
                @foreach (var d in _leaderboard)
                {
                    <tr>
                        <td><strong>@i</strong></td>
                        <td>@d.Name</td>
                        <td>@d.Specialty</td>
                        <td>@d.Projects</td>
                        <td>@d.Rating</td>
                        <td><span class="badge bg-@d.PlanColor">@d.Plan</span></td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

