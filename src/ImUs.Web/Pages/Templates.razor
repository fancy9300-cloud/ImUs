@page "/templates"

<PageTitle>Template Library - ImUs</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-1">Template Library</h3>
        <p class="text-muted mb-0">Soluzioni pre-costruite generate dai progetti enterprise del team ImUs</p>
    </div>
    <button class="btn btn-outline-primary">Pubblica Template</button>
</div>

<!-- Filter -->
<div class="d-flex gap-2 mb-4">
    @foreach (var cat in new[] { "Tutti", "Computer Vision", "IoT", "Analytics", "Robotics" })
    {
        <button class="btn btn-sm @(_filter == cat ? "btn-primary" : "btn-outline-secondary")"
                @onclick="() => _filter = cat">@cat</button>
    }
</div>

<div class="row">
    @foreach (var t in FilteredTemplates)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <span class="badge bg-@t.CategoryColor mb-2">@t.Category</span>
                        <div class="text-end">
                            @if (t.IsNew)
                            {
                                <span class="badge bg-danger">NEW</span>
                            }
                            <span class="badge bg-light text-dark border">v@t.Version</span>
                        </div>
                    </div>
                    <h5 class="card-title mt-2">@t.Name</h5>
                    <p class="card-text text-muted">@t.Description</p>

                    <div class="row text-center my-3 py-2 bg-light rounded">
                        <div class="col-4">
                            <strong>@t.Downloads</strong>
                            <br /><small class="text-muted">Downloads</small>
                        </div>
                        <div class="col-4">
                            <strong>@t.Rating</strong>
                            <br /><small class="text-muted">Rating</small>
                        </div>
                        <div class="col-4">
                            <strong>@t.Price</strong>
                            <br /><small class="text-muted">Licenza</small>
                        </div>
                    </div>

                    <p class="small mb-1"><strong>Stack:</strong></p>
                    <div class="d-flex flex-wrap gap-1 mb-3">
                        @foreach (var s in t.Stack)
                        {
                            <span class="badge bg-light text-dark border">@s</span>
                        }
                    </div>

                    <p class="small mb-1"><strong>Hardware compatibile:</strong></p>
                    <div class="d-flex flex-wrap gap-1">
                        @foreach (var h in t.Hardware)
                        {
                            <span class="badge bg-dark">@h</span>
                        }
                    </div>
                </div>
                <div class="card-footer bg-transparent d-flex gap-2">
                    <button class="btn btn-sm btn-outline-primary flex-fill">Documentazione</button>
                    <button class="btn btn-sm btn-primary flex-fill">Usa Template</button>
                </div>
            </div>
        </div>
    }
</div>

<!-- Circolo Virtuoso -->
<div class="card bg-light border-0 mt-3 mb-4">
    <div class="card-body text-center py-4">
        <h5>Il Circolo Virtuoso dei Template</h5>
        <div class="d-flex justify-content-center align-items-center gap-3 mt-3 flex-wrap">
            <span class="badge bg-primary p-2">Team Interno fa progetto enterprise</span>
            <span class="bi bi-arrow-right"></span>
            <span class="badge bg-success p-2">Genera template riutilizzabili</span>
            <span class="bi bi-arrow-right"></span>
            <span class="badge bg-warning text-dark p-2">Template su piattaforma</span>
            <span class="bi bi-arrow-right"></span>
            <span class="badge bg-info p-2">Sviluppatori li usano</span>
            <span class="bi bi-arrow-right"></span>
            <span class="badge bg-danger p-2">Feedback migliora tutto</span>
        </div>
    </div>
</div>

