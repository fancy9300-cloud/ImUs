            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="card">
             <div class="card-body">
                 <h6 class="text-muted text-uppercase small mb-3">Link Rapidi</h6>
                 <div class="d-flex flex-column gap-2">
                     <a href="/sviluppatori" class="btn btn-light text-start text-primary fw-medium">
                         <span class="bi bi-people me-2"></span> Trova Sviluppatore
                     </a>
                     <a href="/catalogo" class="btn btn-light text-start text-dark">
                         <span class="bi bi-cpu me-2"></span> Catalogo Hardware
                     </a>
                     <a href="/guide" class="btn btn-light text-start text-dark">
                         <span class="bi bi-book me-2"></span> Guide & Docs
                     </a>
                 </div>
             </div>
        </div>
    </div>
</div>

<!-- AI Development Modal -->
