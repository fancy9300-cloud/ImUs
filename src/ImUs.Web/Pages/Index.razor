<!-- Main Content Area: Search & Activities -->
<div class="row">
    <!-- Left Column: Search & Discovery -->
    <div class="col-lg-8">
        <!-- Smart Search Widget -->
        <div class="search-bar mb-4">
            <h5 class="mb-3">Ricerca Intelligente</h5>
            <div class="input-group">
                <span class="input-group-text border-end-0 bg-white">
                    <span class="bi bi-search text-muted"></span>
                </span>
                <input type="text" class="form-control border-start-0 ps-0" 
                       placeholder="Cerca progetti, hardware o chiedi all'IA (es: 'soluzione per monitoraggio frigo')..."
                       @bind="searchQuery"
                       @bind:event="oninput"
                       @onkeyup="OnSearchKeyUp" />
                <button class="btn btn-primary px-4" @onclick="SearchAsync">
                    @if (isSearching)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Cerca
                </button>
            </div>
            
            @if (!string.IsNullOrEmpty(searchQuery) && searchResults.Any())
            {
                <div class="mt-4 fade-in">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted mb-0">Risultati: @searchResults.Count trovati</h6>
                    </div>
                    
                    <div class="list-group list-group-flush">
                        @foreach (var project in searchResults)
                        {
                            <div class="list-group-item border-0 px-0 py-3 border-bottom">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">@project.Title</h6>
                                        <p class="text-muted small mb-2">@project.ClientName</p>
                                        <div class="d-flex gap-2">
                                            <span class="badge bg-light text-success border border-success border-opacity-25">ROI: +@project.EstimatedROI.ToString("N0")€</span>
                                            <span class="badge bg-light text-dark border">@project.PricingBadge Investimento</span>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary">Dettagli</button>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Development Paths (Inline) -->
                    <div class="card bg-light border-0 mt-3 p-3">
                        <h6 class="mb-3">Opzioni di Sviluppo</h6>
                        <div class="row g-2">
                            <div class="col-md-4">
                                <button class="btn btn-white w-100 h-100 border text-start p-2 shadow-sm d-flex align-items-center gap-2">
                                    <div class="rounded-circle bg-success bg-opacity-10 text-success p-2"><span class="bi bi-box-seam"></span></div>
                                    <div class="small lh-1">
                                        <div class="fw-bold">Template</div>
                                        <div class="text-muted" style="font-size: 0.75rem">1-2 sett.</div>
                                    </div>
                                </button>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-white w-100 h-100 border text-start p-2 shadow-sm d-flex align-items-center gap-2" @onclick="ShowAIDevModal">
                                    <div class="rounded-circle bg-secondary bg-opacity-10 text-secondary p-2"><span class="bi bi-robot"></span></div>
                                    <div class="small lh-1">
                                        <div class="fw-bold">AI Helper</div>
                                        <div class="text-muted" style="font-size: 0.75rem">Beta</div>
                                    </div>
                                </button>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-white w-100 h-100 border text-start p-2 shadow-sm d-flex align-items-center gap-2">
                                    <div class="rounded-circle bg-primary bg-opacity-10 text-primary p-2"><span class="bi bi-person-check"></span></div>
                                    <div class="small lh-1">
                                        <div class="fw-bold">Developer</div>
                                        <div class="text-muted" style="font-size: 0.75rem">Recommended</div>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(searchQuery) && !isSearching)
            {
               <div class="text-center py-4 text-muted">
                   <p class="mb-2">Nessun risultato esatto.</p>
                   <button class="btn btn-sm btn-outline-secondary" @onclick="ShowAIDevModal">Chiedi all'Assistente AI</button>
               </div>
            }
        </div>
        
        <!-- Recent Projects Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center bg-white border-bottom-0 pt-4 px-4">
                <h5 class="mb-0">Progetti Recenti</h5>
                <a href="/marketplace" class="text-decoration-none small">Vedi tutti</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" style="font-size: 0.9rem;">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Progetto</th>
                            <th>Status</th>
                            <th>Budget</th>
                            <th>Data</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">Smart Shelf @@ Conad</div>
                                <small class="text-muted">GDO Automation</small>
                            </td>
                            <td><span class="badge bg-success bg-opacity-10 text-success">Completato</span></td>
                            <td><span class="badge bg-light text-dark border">€€</span></td>
                            <td class="text-muted">Oggi</td>
                        </tr>
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">Fridge Monitor</div>
                                <small class="text-muted">IoT Sensors</small>
                            </td>
                            <td><span class="badge bg-primary bg-opacity-10 text-primary">In Corso</span></td>
                            <td><span class="badge bg-light text-dark border">€</span></td>
                            <td class="text-muted">Ieri</td>
                        </tr>
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">Warehouse Tracking</div>
                                <small class="text-muted">Logistics</small>
                            </td>
                            <td><span class="badge bg-warning bg-opacity-10 text-warning">Pending</span></td>
                            <td><span class="badge bg-light text-dark border">€€€</span></td>
                            <td class="text-muted">2 feb</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
