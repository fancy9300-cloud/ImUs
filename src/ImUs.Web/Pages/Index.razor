                    <div class="d-grid">
                        <button class="btn btn-primary" disabled>
                            ⚡ Genera Progetto (Simulazione)
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string searchQuery = "";
    private bool isSearching = false;
    private List<ImUs.Application.DTOs.CompletedProjectDTO> searchResults = new();

    [Inject]
    private ImUs.Application.Services.ISmartSearchService SearchService { get; set; } = default!;

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchAsync();
        }
    }

    private async Task SearchAsync()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            searchResults.Clear();
            return;
        }

        isSearching = true;
        StateHasChanged();

        try
        {
            searchResults = await SearchService.SearchByObjectAsync(searchQuery);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Search error: {ex.Message}");
            searchResults.Clear();
        }
        finally
        {
            isSearching = false;
            StateHasChanged();
        }
    }

    private bool showAiModal = false;
    private string aiPrompt = "";

    private void ShowAIDevModal()
    {
        showAiModal = true;
        aiPrompt = searchQuery;
        StateHasChanged();
    }

    private void CloseAIDevModal()
    {
        showAiModal = false;
        StateHasChanged();
    }
}
