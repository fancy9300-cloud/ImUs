@using ImUs.Domain.Enums
@using ImUs.Domain.Interfaces
@using ImUs.Application.Services
@inject StoreService StoreService
@inject DeviceAppService DeviceService
@inject AlertAppService AlertService

<PageTitle>Caso Studio GDO - ImUs</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-0">Caso Studio: GDO</h3>
        <small class="text-muted">
            @if (_viewMode == "cliente")
            {
                <text>Smart Store Conad Cesena - Vista Cliente Finale</text>
            }
            else
            {
                <text>System Integrator - Gestione Multi-Cliente</text>
            }
        </small>
    </div>
    <div class="d-flex align-items-center gap-3">
        <!-- View Toggle -->
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-sm @(_viewMode == "cliente" ? "btn-primary" : "btn-outline-secondary")" 
                    @onclick='() => _viewMode = "cliente"'>
                <span class="bi bi-shop me-1"></span>Cliente Finale
            </button>
            <button type="button" class="btn btn-sm @(_viewMode == "integrator" ? "btn-primary" : "btn-outline-secondary")" 
                    @onclick='() => _viewMode = "integrator"'>
                <span class="bi bi-diagram-3 me-1"></span>System Integrator
            </button>
        </div>
        <span class="badge bg-success fs-6">LIVE</span>
    </div>
</div>

