@page "/casistudio/gdo/devices"
@using ImUs.Domain.Entities
@using ImUs.Application.Services
@inject DeviceAppService DeviceService
@inject StoreService StoreService

<PageTitle>Dispositivi - ImUs</PageTitle>

<h3 class="mb-4">Dispositivi</h3>

@if (_devices.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Produttore</th>
                <th>Seriale</th>
                <th>Zona</th>
                <th>Stato</th>
                <th>Ultimo contatto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in _devices)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.Type</td>
                    <td>@d.Manufacturer</td>
                    <td><code>@d.SerialNumber</code></td>
                    <td>@(d.Zone?.Name ?? "-")</td>
                    <td>
                        @if (d.IsOnline)
                        {
                            <span class="badge bg-success">Online</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Offline</span>
                        }
                    </td>
                    <td>@d.LastSeen.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nessun dispositivo trovato.</p>
}

@code {
    private List<Device> _devices = new();

    protected override async Task OnInitializedAsync()
    {
        var stores = await StoreService.GetAllStoresAsync();
        var store = stores.FirstOrDefault();
        if (store is not null)
        {
            var devices = await DeviceService.GetDevicesByStoreAsync(store.Id);
            _devices = devices.ToList();
        }
    }
}
